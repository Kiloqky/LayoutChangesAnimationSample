<?xml version="1.0" encoding="utf-8"?>
<transitionSet xmlns:android="http://schemas.android.com/apk/res/android">
    <slide
        android:duration="1000"
        android:slideEdge="end">
        <targets>
            <target android:targetId="@+id/summer_smith" />
        </targets>
    </slide>
    <slide
        android:duration="1000"
        android:slideEdge="start"
        android:startDelay="1000">
        <targets>
            <target android:targetId="@+id/beth_smith" />
        </targets>
    </slide>
    <slide
        android:duration="1000"
        android:slideEdge="top"
        android:startDelay="2000">
        <targets>
            <target android:targetId="@+id/jerry_smith" />
        </targets>
    </slide>
    <changeBounds android:startDelay="3000"/>
</transitionSet>
